@using blazorgamestorecrud.Models;
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">@title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="@Cancel">Cancel</button>
                <button type="button" class="btn btn-primary" @onclick="@Confirm">Delete</button>
            </div>
        </div>
    </div>
</div>

@code {

    [Parameter]
    public Game? Game { get; set; }

    [Parameter]
    public EventCallback<bool> OnClose { get; set; }

    private string title = string.Empty;
    protected override void OnParametersSet()
    {
        title = $"Delete {Game?.Name}?";
    }
    private void Confirm()
    {
        OnClose.InvokeAsync(true);
    }
    private void Cancel()
    {
        OnClose.InvokeAsync(false);
    }
}
